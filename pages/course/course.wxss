.container{
	padding-top: 30px;
}
.container-title{
	font-size: 20px;
	color: #333;
	font-weight: 800;
}

.content-list{
	margin-top: 30px;
	width: 80%;
}
.content-item{
	width: 100%;
	height: 100px;
	font-size: 0;
	border-radius: 10px;
	background-color: #F2F6FC;
	margin-bottom:20px;
}
.content-left{
	position: relative;
	display: inline-block;
	vertical-align: top;
	width: 30%;
	height: 100%;
	border-radius: 10px 0 0 10px;
}
.content-left-item{
	position: absolute;
	top: 50%;
	left:50%;
	transform:translate(-50%, -50%);
	width: 80%;
	height: 80%;
	border-radius: 5px;
	vertical-align: middle;
	background-image: url(http://p2.music.126.net/i0Bo_T3g6WYj4HViNZa2QA==/109951164326925938.jpg?param=140y140);
	background-position: center;
}
.content-right{
	display: inline-block;
	vertical-align: top;
	width: 70%;
	height: 100%;
	border-radius: 0 10px 10px 0;
}
.content-right .course-title{
	display: inline-block;
	margin: 20px 0 6px 20px;
  font-size: 18px;
  color: #333;
  font-weight: 600;
}
.course-teacher{
	margin: 23px 16px 6px 20px;
	float: right;
	font-size: 15px;
	color: #303133;
}
.course-description{
	margin: 5px 16px 6px 20px;
	font-size: 15px;
	line-height: 20px;
	color: #606266;

}

.go-page_home{
	position: fixed;
	bottom: 0;
	width: 100%;
	background-color: #07c160;
	color: #fff;
	font-size: 25px;
	line-height: 50px;
	text-align: center;
}