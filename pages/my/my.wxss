.mb-40{
    margin-bottom: 40rpx;
}
.page-container,page{
    background: #f0eff4;
}
.page-container{
    padding-bottom: 200rpx;
}
.user-section{
    padding-top: 60rpx;
    text-align: center;
}

.my-section{
    margin-top: 80rpx;
}

.user-imgUrl{
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,.2);
}

.user-nickName{
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #484848;
}

.pd-cells{
    border-bottom: 2rpx solid #e7e7e7;
    background: #fff;
}

.pd-cell{
    position:relative;
    border-top: 2rpx solid #e7e7e7;
    padding:10px 15px;
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center;
}

.pd-cell_hover{
    background: #ececec;
}


.pd-cell__bd{
    -webkit-box-flex: 1;
        -webkit-flex: 1;
        flex: 1;
    color: #354b56;
    font-size: 34rpx;
}


.pd-cell__ft{
    color: #878a8c;
    font-size: 28rpx;
    flex: auto;
    text-align:right;
}

.pd-cell__ft_in-access{
    padding-right:13px;
    position:relative;

}

.pd-cell__ft_in-access:after {
    content:" ";
    display:inline-block;
    height:6px;
    width:6px;
    border-width:2px 2px 0 0;
    border-color:#c8c8cd;
    border-style:solid;
    -webkit-transform:matrix(.71,.71,-.71,.71,0,0);
    transform:matrix(.71,.71,-.71,.71,0,0);
    position:relative;
    top:-2px;
    position:absolute;
    top:50%;
    margin-top:-4px;
    right:2px;
}



.kefu{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    width: 100%;
    opacity: 0;
}

.lock-img{
    position: relative;
    top: -2rpx;
    width:32rpx;
    height:32rpx;
    vertical-align: middle;
}