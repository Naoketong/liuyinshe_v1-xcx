Page{
	background-color: #F2F6FC;
}
.container{
	padding-top: 0px;
}
	
.course-top{
	position: relative;
	width: 100%;
	height: 180px;
	background-color: #409EFF;
	margin-bottom: 100px;
}
.course-top_title{
	font-size: 18px;
	color: #fff;
	margin-left: 10%;
}
.course-pers{
	position: absolute;
	top: 20%;
	left: 50%;
	transform: translateX( -50%);
	width: 80%;
	height: 180px;
	background-color: #fff;
	box-shadow: 2px 4px 8px 0 rgba(46,61,73,.2);
	border-radius: 10px;

}
.user-avatar{
  position: absolute;
  top: 22px;
  left: 22px;
  width: 80px;
  height: 80px;
  background: #f5f9fc;
  border-radius: 50%;
}
.user-button{
	position: absolute;
	bottom: 20px;
	left: 20px;
	padding: 0 20px;
	height: 28px;
	line-height: 28px;
	border: 1px solid #409EFF;
	color: #409EFF;
	text-align: center;
	border-radius: 15px;
	font-size: 12px;
	background: #fff;

}
.user-right{
	position: absolute;
	left: 150px;
	top:20px;
}
.user-name{
	color: #303133;
	font-size: 20px;
}
.user-desc{
  line-height: 40px;
  color: #757784;
  font-size: 14px;
}
.user-tips{
  line-height: 40px;
  color: #444775;
  font-size: 12px;
}



.classes-section{
	width: 90%;
}
.classes-title{
	margin-bottom: 20px;
	font-size: 15px;
	color: #606266;
	margin-left: 3px;
}
.classes-content{
	width: 100%;
	height: 50px;
	border-radius: 8px;
	font-size: 0;
	background-color:  #fff;
	margin-bottom:10px;
	font-size: 0;
	/*border-radius: 6px;*/
}
.classes-item{
	display: inline-block;
	vertical-align: top;
	height: 100%;
}
.classes-item.left{
	width: 26%;
	background-color: #409EFF;
	border-radius: 6px 0 0 6px;
	font-size: 14px;
	color: #fff;
	text-align: center;
	line-height: 50px;
}
.classes-item.right{
	width: 74%;
	background-color: #fff;
	border-radius: 0 6px 6px 0;
}
.classes-item-text{
	display: inline-block;
	vertical-align: top;
	width: 50%;
	height: 100%;
	text-align: center;
	font-size: 12px;
}
.item-text-title{
	color: #409EFF;
	line-height: 25px;
}
.item-text-desc{
	color:#606266;
	line-height: 22px;
}





.course-container{
	width:90%;
}
.course-kind{
	margin-bottom: 20px;
	font-size: 15px;
	color: #606266;
	margin-left: 3px;
}
.course-section{
	width: 100%;
	height: 150px;
	border-radius: 8px;
	font-size: 0;
	background-color:  #fff;
	margin-bottom:20px;
}
.course-content{
	display: inline-block;
	vertical-align: top;
	height: 100%;
}
.course-content.left{
	width: 60%;
	border-radius: 8px 0 0 8px;
}
.course-title{
	font-size: 26px;
	color: #303133;
	line-height: 24px;
	margin: 25px 0 0 20px;
	font-weight: 600;
	margin-bottom: 20px;

}
.course-item{
	margin-left: 20px;
	font-size: 15px;
	color: #303133;
	line-height: 25px;
	margin-bottom: 5px;

}
.course-item.top{
	font-size: 18px;
	color: #606266;
}




.course-content.right{
	position: relative;
	width: 40%;
	/*background-color: yellow;*/
	border-radius: 0 8px 8px 0;
	background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1566971931639&di=8b5ca198a3d2e1b7cbd09632ee33b239&imgtype=0&src=http%3A%2F%2Fimg.juimg.com%2Ftuku%2Fyulantu%2F110809%2F6445-110P91Q92727.jpg);
	/*background-size: 114.58px 150px;*/
	background-position: center;
}
.course-right-item{
	position: absolute;
	bottom: 0;
	right: 0;
	width: 60%;
	height: 30px;
	background-color: rgba(0,0,0,.7);
	border-radius: 8px 0 8px 0;
}
.course-number{
	text-align: center;
	font-size: 10px;
	color:#fff;
	line-height: 30px;
}